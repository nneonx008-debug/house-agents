                <div class="input-box">
                    <label>Vehicle Name</label>
                    <input type="text" name="title" placeholder="Vehicle Name" required>
                </div>

                <div class="input-box">
                    <label>Description</label>
                    <textarea name="description" placeholder="Write something about this Vehicle..."
                        required></textarea>
                </div>

