                    <label>Fuel Type</label>
                    <select name="fueltype" required>
                        <option value="petrol">petrol</option>
                        <option value="diesel">diesel</option>
                        <option value="hybrid">hybrid</option>
                        <option value="gas">gas</option>
                        <option value="electric">electric</option>
                    </select>
                </div>

                <div class="input-box">
                    <label>Miles P/HR</label>
                    <select name="mileage" required>
                        <option value="40">40</option>
                        <option value="60">60</option>
                        <option value="100">100</option>
                        <option value="120">120</option>
                        <option value="160">160</option>
                        <option value="180">180</option>
                        <option value="200">200</option>
                        <option value="220">220</option>
                        <option value="260">260</option>
                        <option value="290">290</option>
                        <option value="310">310</option>
                    </select>
                </div>

                <div class="input-box">
                    <label>Vehicle Type</label>
                    <select name="transmission" required>
                        <option value="">none</option>

                        <option value="cars">cars</option>
                        <option value="vehicle parts">vehicle parts</option>
                        <option value="truck">truck</option>
                        <option value="bike">bike</option>
                        <option value="boat">boat</option>
                    </select>
                </div>

                <div class="input-box">
                    <label>Price</label>
                    <input type="text" id="price" name="price" placeholder="Price" required>
                </div>
                <script>
                    const priceInput = document.getElementById("price");

                    // Format with commas while typing
                    priceInput.addEventListener("input", function () {
                        let value = this.value.replace(/,/g, ""); // remove commas

                        // allow only digits
                        if (!/^\d*$/.test(value)) {
                            this.value = this.value.replace(/[^\d,]/g, "");
                            return;
                        }

                        if (value) {
                            this.value = Number(value).toLocaleString();
                        }
                    });

                    // Before submitting, remove commas so server receives raw digits
                    document.getElementById("sellForm").addEventListener("submit", function () {
                        priceInput.value = priceInput.value.replace(/,/g, "");
                    });
                </script>



