    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const input = document.getElementById("friendSearchInput");
            const box = document.getElementById("friendSuggestions");

            if (!input || !box) return;

            const cards = document.querySelectorAll(".friends-list .user-box");
            let POOL = [];

            // Build suggestion pool from rendered friends
            cards.forEach(card => {
                const name = card.querySelector("strong")?.textContent.trim();
                const meta = card.querySelector(".friend-meta")?.textContent.trim();

                if (name) POOL.push(name);
                if (meta) {
                    meta.split(",").forEach(p => {
                        const t = p.trim();
                        if (t) POOL.push(t);
                    });
                }
            });

            POOL = [...new Set(POOL)];
            function renderSuggestions(list) {
                box.innerHTML = "";
                if (!list.length) {
                    box.style.display = "none";
                    lockScroll(false);
                    return;
                }

                list.slice(0, 8).forEach(text => {
                    const div = document.createElement("div");
                    div.textContent = text;
                    div.onclick = () => {
                        input.value = text;
                        box.style.display = "none";
                        lockScroll(false);
                        filterFriends(text);
                    };
                    box.appendChild(div);
                });

                box.style.display = "block";
                lockScroll(true);
            }

            function lockScroll(lock) {
                if (window.innerWidth <= 768) {
                    document.body.style.overflow = lock ? "hidden" : "";
                }
            }

            function filterFriends(query) {
                const q = query.toLowerCase();
                cards.forEach(card => {
                    const content = card.textContent.toLowerCase();
                    card.parentElement.style.display =
                        content.includes(q) ? "block" : "none";
                });
            }

            input.addEventListener("input", () => {
                const q = input.value.trim().toLowerCase();
                if (q.length < 2) {
                    box.style.display = "none";
                    filterFriends("");
                    return;
                }

                const matches = POOL.filter(p =>
                    p.toLowerCase().includes(q)
                );

                renderSuggestions(matches);
                filterFriends(q);
            });

            input.addEventListener("focus", () => {
                if (input.value.length >= 2) {
                    renderSuggestions(
                        POOL.filter(p =>
                            p.toLowerCase().includes(input.value.toLowerCase())
                        )
                    );
                }
            });

            document.addEventListener("click", e => {
                if (!e.target.closest("#friendSearchInput") &&
                    !e.target.closest("#friendSuggestions")) {
                    box.style.display = "none";
                    lockScroll(false);
                }
            });

        });
    </script>
