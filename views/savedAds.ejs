            padding: 1rem;
            border-radius: 0.75rem;
            text-align: center;
        }

        .user-box img {
            width: 55px;
            height: 55px;
            border-radius: 50%;
            margin-bottom: 0.5rem;
        }

        /* Overlay */
        .overlay {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0, 0, 0, 0.5);
            z-index: 250;
            display: none;
        }

        .overlay.show {
            display: block;
        }

        /* Topbar */
        .topbar {
            position: fixed;
            top: 0;
            left: 250px;
            right: 0;
            height: 65px;
            background: #2563eb;
            color: #fff;
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 24px;
            z-index: 200;
        }

        .hamburger {
            display: none;
            flex-direction: column;
            gap: 5px;
            cursor: pointer;
        }

        .hamburger span {
            width: 22px;
            height: 3px;
            background: #fff;
            border-radius: 3px;
        }

        /* Main */
        .main {
            margin-left: 250px;
            flex: 1;
            overflow-y: auto;
            padding: 90px 2rem 2rem;
            animation: fadeIn 0.8s ease;
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(260px, 1fr));
            gap: 1.5rem;
        }

        .card {
            background: #fff;
            border-radius: 1rem;
            box-shadow: 0 3px 8px rgba(0, 0, 0, 0.08);
            overflow: hidden;
            transition: all .3s ease;
            display: flex;
            flex-direction: column;
        }

        .card:hover {
            transform: translateY(-6px);
            box-shadow: 0 6px 16px rgba(0, 0, 0, 0.15);
        }

        .card img {
            width: 100%;
            height: 180px;
            object-fit: cover;
        }

        .card-content {
            padding: 1rem;
        }

        .card h3 {
            font-size: 1.05rem;
            margin-bottom: 0.4rem;
            font-weight: 600;
            color: #111;
        }

        .price {
            font-weight: bold;
            color: #2563eb;
            margin-bottom: 0.4rem;
        }

        .details {
            font-size: 0.85rem;
            color: #555;
            text-transform: capitalize;
        }

        .empty-msg {
            text-align: center;
            margin-top: 3rem;
            font-size: 1.1rem;
            color: #666;
        }

        @media (max-width: 768px) {
            .hamburger {
                display: flex;
            }

            .sidebar {
                left: -260px;
            }

            .sidebar.show {
                left: 0;
            }

            .topbar {
                left: 0;
            }

            .main {
                margin-left: 0;
                padding: 90px 1rem 1rem;
            }
        }

        /* Loader */
        #loader {
            position: fixed;
            inset: 0;
            background: #f9fafb;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            z-index: 9999;
            transition: opacity 0.5s ease;
        }

        #loader img {
            width: 120px;
            margin-bottom: 15px;
            animation: pulseLogo 1.5s infinite;
        }

        .loader-motto {
            font-size: 1.2rem;
            font-weight: 500;
            color: #2563eb;
            margin-bottom: 20px;
        }

        .loader-bar {
            width: 220px;
            height: 8px;
            background: #e5e7eb;
            border-radius: 4px;
            overflow: hidden;
        }

        .loader-progress {
            width: 0%;
            height: 100%;
            background: #2563eb;
            animation: loadProgress 1s forwards;
        }

        @keyframes loadProgress {
            from {
                width: 0%;
            }

            to {
                width: 100%;
            }
        }

        @keyframes pulseLogo {

            0%,
            100% {
                transform: scale(1);
            }

            50% {
                transform: scale(1.05);
            }
        }

        .delete-form {
            padding: 0.8rem 1rem;
