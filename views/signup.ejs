<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sign Up</title>

    <style>
        * {
            box-sizing: border-box;
        }

        body {
            font-family: system-ui, -apple-system, BlinkMacSystemFont, sans-serif;
            background: linear-gradient(135deg, #eef2ff, #f5f7fb);
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .form-container {
            background: #fff;
            padding: 30px;
            width: 100%;
            max-width: 420px;
            border-radius: 14px;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            animation: popIn 0.6s ease;
        }

        @keyframes popIn {
            from {
                transform: scale(0.95);
                opacity: 0;
            }

            to {
                transform: scale(1);
                opacity: 1;
            }
        }

        h2 {
            text-align: center;
            margin-bottom: 15px;
        }

        /* Progress bar */
        .progress {
            height: 5px;
            background: #e5e7eb;
            border-radius: 999px;
            overflow: hidden;
            margin-bottom: 25px;
        }

        .progress-bar {
            height: 100%;
            width: 33%;
            background: #2563eb;
            transition: width 0.5s ease;
        }

        label {
            display: block;
            margin-top: 15px;
            font-weight: 600;
            font-size: 14px;
        }

        input,
        select {
            width: 100%;
            padding: 11px;
            margin-top: 6px;
            border-radius: 8px;
            border: 1px solid #d1d5db;
            transition: all 0.25s ease;
        }

        input:focus,
        select:focus {
            outline: none;
            border-color: #2563eb;
            box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.15);
        }

        /* Steps */
        .steps-wrapper {
            position: relative;
            min-height: 260px;
        }

        .step {
            position: absolute;
            width: 100%;
            opacity: 0;
            transform: translateX(40px);
            pointer-events: none;
            transition: all 0.45s cubic-bezier(.4, 0, .2, 1);
        }

        .step.active {
            opacity: 1;
            transform: translateX(0);
            pointer-events: auto;
        }

        .step.prev {
            transform: translateX(-40px);
        }

        .btn-group {
            display: flex;
            justify-content: space-between;
            margin-top: 25px;
        }

        button {
            padding: 11px 20px;
            border: none;
            border-radius: 999px;
            cursor: pointer;
            background: #2563eb;
            color: white;
            font-weight: 600;
            transition: transform 0.15s ease, box-shadow 0.15s ease, background 0.2s;
        }

        button:hover {
            background: #1e4fd6;
            box-shadow: 0 8px 20px rgba(37, 99, 235, 0.3);
            transform: translateY(-1px);
        }

        button:active {
            transform: scale(0.97);
        }

        button.secondary {
            background: #e5e7eb;
            color: #111827;
        }

        button.secondary:hover {
            background: #d1d5db;
            box-shadow: none;
        }

        .redirect {
            text-align: center;
            margin-top: 18px;
            font-size: 14px;
        }

        .redirect a {
            color: #2563eb;
            text-decoration: none;
            font-weight: 600;
        }

        .error {
            color: red;
            text-align: center;
            margin-top: 10px;
        }
    </style>
</head>

<body>

    <div class="form-container">
        <h2>Create Account</h2>

        <div class="progress">
            <div class="progress-bar" id="progressBar"></div>
        </div>

        <form id="signupForm" action="/signup" method="POST">

            <div class="steps-wrapper">

                <!-- STEP 1 -->
                <div class="step active">
                    <label>User Name</label>
                    <input type="text" name="fullname" required>

                    <label>Email</label>
                    <input type="email" name="email" required>

                    <div class="btn-group">
                        <span></span>
                        <button type="button" onclick="nextStep()">Next</button>
                    </div>
                </div>

                <!-- STEP 2 -->
                <div class="step">
                    <label>Password</label>
                    <input type="password" id="password" name="password" required>

                    <label>Confirm Password</label>
                    <input type="password" id="confirm_password" name="confirm_password" required>

                    <div class="btn-group">
                        <button type="button" class="secondary" onclick="prevStep()">Back</button>
                        <button type="button" onclick="nextStep()">Next</button>
                    </div>
                </div>

                <!-- STEP 3 -->
                <div class="step">
                    <label>Country</label>
                    <select name="country" id="location" required>
                        <option value="">Choose country</option>
                        <option value="ghana">Ghana</option>
                        <option value="nigeria">Nigeria</option>
                    </select>

                    <label>Region / State</label>
                    <select id="specific" name="state" required>
                        <option value="">Select state</option>
                    </select>

                    <div class="btn-group">
                        <button type="button" class="secondary" onclick="prevStep()">Back</button>
                        <button type="submit">Sign Up</button>
                    </div>
                </div>

            </div>

            <p class="redirect">
                Already have an account? <a href="/login">Login</a>
            </p>

            <% if (typeof error !=="undefined" ) { %>
                <p class="error">
                    <%= error %>
                </p>
                <% } %>

        </form>
    </div>

    <script>
        let currentStep = 0;
        const steps = document.querySelectorAll(".step");
        const progressBar = document.getElementById("progressBar");

        function updateUI() {
            steps.forEach((step, i) => {
                step.classList.remove("active", "prev");
                if (i === currentStep) step.classList.add("active");
                if (i < currentStep) step.classList.add("prev");
            });

            progressBar.style.width = ((currentStep + 1) / steps.length) * 100 + "%";
        }

        function nextStep() {
            if (currentStep === 1) {
                const p = password.value;
                const c = confirm_password.value;
                if (p.length < 6) return alert("Password must be at least 6 characters");
                if (p !== c) return alert("Passwords do not match");
            }

            if (currentStep < steps.length - 1) {
                currentStep++;
                updateUI();
            }
        }

        function prevStep() {
            if (currentStep > 0) {
                currentStep--;
                updateUI();
            }
        }
    </script>

