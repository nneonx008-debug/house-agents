<script>
    // ======================
    // INIT
    // ======================
    const socket = io();

    const myUserId = "<%= user._id.toString() %>";
    const otherUserId = "<%= otherUser._id.toString() %>";

    const messagesDiv = document.getElementById("messages");
    const form = document.getElementById("chatForm");
    const input = document.getElementById("content");
    const typingStatus = document.getElementById("typingStatus");
    const liveStatus = document.getElementById("liveStatus");

    let typingTimeout;

    // ======================
    // JOIN ROOM
    // ======================
    socket.emit("join", { userId: myUserId });

    // ======================
    // ONLINE STATUS
    // ======================
    socket.on("online-users", (users) => {
        if (users.includes(otherUserId)) {
            liveStatus.textContent = "● Online";
            liveStatus.classList.add("online");
            liveStatus.classList.remove("offline");
        } else {
            liveStatus.textContent = "● Offline";
            liveStatus.classList.add("offline");
            liveStatus.classList.remove("online");
        }
    });

    // ======================
    // RECEIVE MESSAGE
    // ======================
    socket.on("newMessage", (msg) => {
        const node = document.createElement("div");
        const isSent = msg.sender._id === myUserId;

        node.className = "message " + (isSent ? "sent" : "received");
        node.textContent = msg.content;

        messagesDiv.appendChild(node);
        messagesDiv.scrollTop = messagesDiv.scrollHeight;
    });

    // ======================
    // SEND MESSAGE
    // ======================
    form.addEventListener("submit", (e) => {
        e.preventDefault();

        const content = input.value.trim();
        if (!content) return;

        socket.emit("chatMessage", {
            receiverId: otherUserId,
            content,
        });

        input.value = "";
        socket.emit("stopTyping", { receiverId: otherUserId });
    });

    // ======================
    // TYPING INDICATOR
    // ======================
    input.addEventListener("input", () => {
        socket.emit("typing", { receiverId: otherUserId });

        clearTimeout(typingTimeout);
        typingTimeout = setTimeout(() => {
            socket.emit("stopTyping", { receiverId: otherUserId });
        }, 1000);
    });

    socket.on("userTyping", ({ userId }) => {
        if (userId === otherUserId) {
            typingStatus.style.display = "block";
        }
    });

    socket.on("userStopTyping", ({ userId }) => {
        if (userId === otherUserId) {
            typingStatus.style.display = "none";
        }
    });

    // ======================
    // DEBUG
    // ======================
    socket.on("connect", () => {
        console.log("✅ socket connected:", socket.id);
