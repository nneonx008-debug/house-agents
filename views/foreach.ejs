    <script>
      const fabMain = document.getElementById("fabMain");
      const fabMenu = document.getElementById("fabMenu");
      const callBtn = document.getElementById("callBtn");

      /* Toggle FAB */
      if (fabMain) {
        fabMain.addEventListener("click", () => {
          fabMenu.classList.toggle("show");
          fabMain.classList.toggle("open");
        });
      }

      /* Call reveal logic */
      if (callBtn) {
        let revealed = false;
        const tooltip = document.getElementById("copyTip");

        callBtn.addEventListener("click", async () => {
          const number = callBtn.dataset.number;

          // 1Ô∏è‚É£ Reveal number
          if (!revealed) {
            callBtn.firstChild.textContent = number;
            callBtn.style.width = "auto";
            callBtn.style.padding = "0 14px";
            callBtn.style.borderRadius = "14px";
            callBtn.style.fontSize = "14px";
            revealed = true;
            return;
          }

          // 2Ô∏è‚É£ Copy on second click
          try {
            await navigator.clipboard.writeText(number);

            // Show tooltip
            tooltip.classList.add("show");

            setTimeout(() => {
              tooltip.classList.remove("show");
            }, 1200);

          } catch (err) {
            alert("Failed to copy number");
          }
        });
      }

