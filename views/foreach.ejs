    }

    /* Sidebar */
    .sidebar {
      width: 250px;
      background: #fff;
      border-right: 1px solid #eee;
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      padding: 1.2rem;
      position: fixed;
      top: 0;
      bottom: 0;
      left: 0;
      z-index: 300;
      transition: left 0.3s ease;
    }

    .sidebar .logo img {
      width: 40%;
      margin-bottom: 2rem;
    }

    .nav {
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }

    .nav a {
      padding: 0.75rem 1rem;
      border-radius: 0.5rem;
      font-size: 0.95rem;
      font-weight: 500;
      color: #444;
      transition: 0.3s;
    }

    .nav a:hover,
    .nav a.active {
      background: #2563eb;
      color: #fff;
    }

    .user-box {
      background: #f1f5f9;
      padding: 1rem;
      border-radius: 0.75rem;
      text-align: center;
    }

    .user-box img {
      width: 55px;
      height: 55px;
      border-radius: 50%;
      margin-bottom: 0.5rem;
    }

    /* Overlay */
    .overlay {
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: rgba(0, 0, 0, 0.5);
      z-index: 250;
      display: none;
    }

    .overlay.show {
      display: block;
    }

    /* Topbar */
    .topbar {
      position: fixed;
      top: 0;
      left: 250px;
      right: 0;
      height: 65px;
      background: #2563eb;
      color: #fff;
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 0 24px;
      z-index: 200;
    }

    .hamburger {
      display: none;
      flex-direction: column;
      gap: 5px;
      cursor: pointer;
    }

    .hamburger span {
      width: 22px;
      height: 3px;
      background: #fff;
      border-radius: 3px;
    }

    /* Main */
    .main {
      margin-left: 250px;
      flex: 1;
      overflow-y: auto;
      padding: 90px 2rem 2rem;
    }

    /* Property Section */
    .property-section {
      display: grid;
      grid-template-columns: 2fr 1fr;
      gap: 1.5rem;
      background: #fff;
      padding: 1.5rem;
      border-radius: 12px;
      box-shadow: 0 3px 10px rgba(0, 0, 0, 0.06);
    }

    .images {
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }

    .main-image {
      height: 400px;
      object-fit: cover;
      border-radius: 10px;
    }

    .thumbnails {
      display: flex;
      gap: 0.6rem;
      flex-wrap: wrap;
    }

    .thumbnails img {
      width: 90px;
      height: 90px;
      object-fit: cover;
      border: 2px solid transparent;
      cursor: pointer;
      transition: 0.2s;
      border-radius: 6px;
    }

    .thumbnails img:hover {
      border-color: #2563eb;
    }

    .copy {
      position: relative;
      display: inline-block;
    }

    #tooltip {
      visibility: hidden;
      background: #28a745;
      color: #fff;
      font-size: 14px;
      border-radius: 20px;
      padding: 4px 10px;
      position: absolute;
      bottom: 120%;
      left: 50%;
      transform: translateX(-50%);
      opacity: 0;
      transition: opacity 0.3s;
      white-space: nowrap;
    }

    #tooltip.show {
      visibility: visible;
      opacity: 1;
    }

