                function getAvatarColor(name) {
                    const colors = [
                        "#1a73e8", // Google blue
                        "#34a853", // Google green
                        "#fbbc05", // Google yellow
                        "#ea4335", // Google red
                        "#9334e6", // purple
                        "#f06292", // pink
                        "#00acc1", // cyan
                        "#5c6bc0"  // indigo
