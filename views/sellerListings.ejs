        /* Reset */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
        }

        body {
            background: #f9fafb;
            color: #333;
            display: flex;
            height: 100vh;
            overflow: hidden;
        }

        a {
            text-decoration: none;
            color: inherit;
        }

        img {
            max-width: 100%;
            display: block;
        }

        /* Sidebar */
        .sidebar {
            width: 250px;
            background: #fff;
            border-right: 1px solid #eee;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            padding: 1.2rem;
            position: fixed;
            top: 0;
            bottom: 0;
            left: 0;
            z-index: 200;
            transition: left 0.3s ease;
        }

        .sidebar.mobile-hidden {
            left: -260px;
        }

        .sidebar .logo img {
            width: 30%;
            margin-bottom: 2rem;
        }

        .nav {
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }

        .nav a {
            padding: 0.75rem 1rem;
            border-radius: 0.5rem;
            font-size: 0.95rem;
            font-weight: 500;
            color: #444;
            transition: 0.3s;
        }

        .nav a:hover,
        .nav a.active {
            background: #2563eb;
            color: #fff;
        }

        .user-box {
            background: #f1f5f9;
            padding: 1rem;
            border-radius: 0.75rem;
            text-align: center;
        }

        .user-box img {
            width: 55px;
            height: 55px;
            border-radius: 50%;
            margin-bottom: 0.5rem;
        }

        /* Topbar */
        .topbar {
            position: fixed;
            top: 0;
            left: 250px;
            right: 0;
            height: 65px;
            background: #2563eb;
            color: #fff;
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 24px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.15);
            z-index: 150;
        }

        .hamburger {
            display: none;
            flex-direction: column;
            gap: 5px;
            cursor: pointer;
        }

        .hamburger span {
            width: 22px;
            height: 3px;
            background: #fff;
            border-radius: 3px;
        }

        /* Main Content */
        .main {
            margin-left: 250px;
            flex: 1;
            overflow-y: auto;
            padding: 90px 2rem 2rem;
            background: #f4f4f4;
        }

        header {
