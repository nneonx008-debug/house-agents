        <script>
            function getAvatarColor(name) {
                const colors = [
                    "#1a73e8", // Google blue
                    "#34a853", // Google green
                    "#fbbc05", // Google yellow
                    "#ea4335", // Google red
                    "#9334e6", // purple
                    "#f06292", // pink
                    "#00acc1", // cyan
                    "#5c6bc0"  // indigo
                ];

                let hash = 0;
                for (let i = 0; i < name.length; i++) {
                    hash = name.charCodeAt(i) + ((hash << 5) - hash);
                }

                return colors[Math.abs(hash) % colors.length];
            }

