            font-size: 14px;
            line-height: 1.4;
        }

        .notification-header {
            display: flex;
            align-items: center;
            gap: 8px;
            font-size: 15px;
            margin-bottom: 6px;
        }

        .notification-card a {
            color: #ffdd57;
            font-weight: bold;
        }

