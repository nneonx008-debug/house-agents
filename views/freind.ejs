            border-right: 1px solid #eee;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            padding: 1.2rem;
            position: fixed;
            top: 0;
            bottom: 0;
            left: 0;
            z-index: 200;
            transition: left 0.3s ease;
        }

        .sidebar.mobile-hidden {
            left: -260px;
        }

        .sidebar .logo img {
            width: 30%;
            margin-bottom: 2rem;
        }

        .nav {
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }

        .nav a {
