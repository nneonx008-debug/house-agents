            display: none;
        }

        @media(max-width:768px) {
            .hamburger {
                display: flex;
            }

            .sidebar {
                left: -260px;
            }

            .sidebar.show {
                left: 0;
            }

            .topbar {
                left: 0;
                padding: 0 15px;
            }

            .main {
                margin-left: 0;
                padding: 90px 1rem 1rem;
            }

