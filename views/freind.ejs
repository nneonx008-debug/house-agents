            transition: 0.3s;
        }

        .nav a:hover,
        .nav a.active {
            background: #2563eb;
            color: #fff;
        }

        .user-box {
            background: #f1f5f9;
            padding: 1rem;
            border-radius: 0.75rem;
            text-align: center;
        }

        .user-box img {
            width: 55px;
            height: 55px;
            border-radius: 50%;
            margin-bottom: 0.5rem;
        }

        /* Topbar */
        .topbar {
            position: fixed;
            top: 0;
            left: 250px;
            right: 0;
            height: 65px;
            background: #2563eb;
            color: #fff;
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 24px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.15);
            z-index: 150;
        }

        .hamburger {
            display: none;
            flex-direction: column;
            gap: 5px;
            cursor: pointer;
        }

