<script>
    const slides = document.querySelectorAll('#featureCarousel .feature-slide');
    const dotsContainer = document.getElementById('carouselDots');
    let current = 0;

    // Create dots
    slides.forEach((_, i) => {
        const dot = document.createElement('span');
        dot.dataset.index = i;
        if (i === 0) dot.classList.add('active');
        dotsContainer.appendChild(dot);
    });

    // Function to show slide
    function showSlide(index) {
        slides[current].classList.remove('active');
        dotsContainer.children[current].classList.remove('active');
        current = index;
        slides[current].classList.add('active');
        dotsContainer.children[current].classList.add('active');
    }

    // Auto-slide every 3s
    let slideInterval = setInterval(() => {
        showSlide((current + 1) % slides.length);
    }, 3000);

    // Dot click
    dotsContainer.addEventListener('click', e => {
        if (e.target.tagName === 'SPAN') {
            showSlide(Number(e.target.dataset.index));
            resetInterval();
        }
    });

    // Touch swipe
    let startX = 0;
    const carousel = document.getElementById('featureCarousel');

    carousel.addEventListener('touchstart', e => {
        startX = e.touches[0].clientX;
    });

    carousel.addEventListener('touchend', e => {
        const endX = e.changedTouches[0].clientX;
        if (endX - startX > 50) { // swipe right
            showSlide((current - 1 + slides.length) % slides.length);
            resetInterval();
        } else if (startX - endX > 50) { // swipe left
            showSlide((current + 1) % slides.length);
            resetInterval();
        }
    });

    // Reset interval after manual interaction
    function resetInterval() {
        clearInterval(slideInterval);
        slideInterval = setInterval(() => {
            showSlide((current + 1) % slides.length);
        }, 3000);
    }
</script>

