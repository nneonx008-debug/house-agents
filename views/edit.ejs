                    const stateSelect = document.getElementById("location");
                    const specificSelect = document.getElementById("specific");

                    // Load states based on country
                    function loadStates() {
                        stateSelect.innerHTML = '<option value=""><%=home.location%></option>';
                        specificSelect.innerHTML = '<option value=""><%=home.specific%></option>';

                        const states = locationsByCountry[USER_COUNTRY];

                        if (!states) return;

                        Object.keys(states).forEach(state => {
                            const option = document.createElement("option");
                            option.value = state;
                            option.textContent = state.replace(/_/g, " ").toUpperCase();
                            stateSelect.appendChild(option);
                        });
                    }

                    // Load LGAs / Districts
                    stateSelect.addEventListener("change", () => {
                        const selectedState = stateSelect.value;
                        specificSelect.innerHTML = '<option value="">Select subdivision</option>';

                        const areas = locationsByCountry[USER_COUNTRY][selectedState];
                        if (!areas) return;

                        areas.forEach(area => {
                            const opt = document.createElement("option");
                            opt.value = area.toLowerCase().replace(/\s+/g, "-");
                            opt.textContent = area;
                            specificSelect.appendChild(opt);
                        });
                    });

                    // Run on page load
                    loadStates();


                </script>
