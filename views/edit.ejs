            margin-top: 0;
            font-size: 20px;
            border-bottom: 1px solid #ddd;
            padding-bottom: 10px;
        }

        /* Image preview */
        .preview img {
            width: 100%;
            border-radius: 8px;
            margin-bottom: 15px;
        }

        label {
            font-size: 14px;
            font-weight: 600;
            margin-top: 15px;
            display: block;
        }

        input,
        textarea,
        select {
            width: 100%;
            padding: 10px;
            margin-top: 6px;
            border-radius: 6px;
            border: 1px solid #ccd0d5;
            font-size: 14px;
            background: #f5f6f7;
        }

        textarea {
            resize: vertical;
            min-height: 80px;
        }

        .file-group input {
            background: white;
        }

        .row {
            display: flex;
            gap: 10px;
            margin-top: 10px;
        }

        .row select {
            flex: 1;
        }

        button {
            width: 90%;
            background: #1877f2;
            color: white;
            border: none;
            padding: 9px;
            position: fixed;
            bottom: 0;
            font-size: 16px;
            font-weight: bold;
            border-radius: 8px;
            cursor: pointer;
            margin-top: 0px;
        }

        button:hover {
            background: #166fe5;
        }

</style>
<style>
    .image-upload-box {
        margin-bottom: 16px;
    }

    .image-preview {
        height: 140px;
